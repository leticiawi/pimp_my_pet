

<div class="search">
      <%= link_to "View All |", products_path, class: "search" %>
      <%= link_to "Top 5 |", "#", class: "search"%>
      <%= link_to "Toys |", "#", class: "search"%>
      <%= link_to "Treats |", "#", class: "search"%>
      <%= link_to "Beauty", "#", class: "search"%>
    </div>

    <h1><%= @product.name %></h1>

<div class="d-flex justify-content-center">
     <div class="col-12 col-md-6 col-lg-4">
       <% if @product.photo.attached? %>
       <div class="card-trip">
         <img class="card-img-top" src='<%= cl_image_path @product.photo.key %>' alt="Card image cap">
       <% else %>
         <img class="card-img-top" src="https://images.unsplash.com/photo-1591347887817-173e3d5c4891?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2582&q=80" alt="Card image cap">
       <% end %>
         <div class="card-trip-infos">
           <div>
             <h2><%= @product.name %></h2>
             <p>Amount: <%= humanized_money_with_symbol(@product.price) %></p>
             <div class="border p-3">
               <p>Description:</p>
               <p> "<%= @product.description %>"</p>
             </div>
               <div>
                <%= form_tag product_orders_path(@product), method: :post do %>
                <%= hidden_field_tag 'product_id', @product.id %>
                <%= submit_tag 'Purchase', class: 'btn btn-primary' %>
                <% end %>
                 <%#= link_to "Buy now", new_product_cart_path(@product), class: "btn btn-flat" %>
                 <%#= link_to new_product_order_payment_path(@product, @order), method: :delete, data: { confirm: "Are you sure?" } do %>
                 <%#= " || Remove Product" %>
                 <%# end %>
               </div>
           </div>
             <%#= link_to "View!", product_path(@Product.first), class: "btn btn-gradient" %>
         </div>
       </div>
    </div>
  </div>



