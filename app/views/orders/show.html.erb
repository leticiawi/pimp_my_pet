

<div class="container border my-5">
  <div class="container adjust-height">
    <div class="row py-4">
      <div class="col-md-3"><%#= cl_image_tag @order.product.photo.key, width: "200px" %></div>
      <div class="col">
          <h1>Congrats! On your Purchase <i class="fas fa-dog"></i></h1>
          <h3>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.state %></span></small></h3>
          <ul class="list-unstyled">

            <li><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></li>
            <li><strong>PRODUCT</strong> <%= @order.product.name %> [<%= @order.product_sku %>]</li>
            <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.amount %></li>
            </li>
          </ul>
        <p>Estimated delivery in <strong>2 business days</strong></p>
        <%= cl_image_tag @order.product.photo.key, width: "600px" %>
      </div>
    </div>
  </div>
</div>
