<div class="container my-3">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h3>Create a new product</h3>
      <ul class="list-group">
        <%= simple_form_for @product do |form| %>
        <li class="list-group-item"><%= form.input :name %></li>
        <li class="list-group-item"><%= form.input :description %></li>
        <li class="list-group-item"><%= form.input :price %></li>
        <li class="list-group-item"><%= form.input :photo, as: :file %></li>
        <%= form.submit class: 'btn btn-info' %>
        <% end %>
      </ul>
      <%#= render 'shared/form' %>
      </div>
      <%= link_to "Back to all products", products_path %>
  </div>
</div>
